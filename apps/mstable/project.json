{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mstable/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "dependsOn": ["^codegen", "^build"],
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/mstable",
        "index": "apps/mstable/src/index.html",
        "baseHref": "/",
        "main": "apps/mstable/src/main.tsx",
        "polyfills": "apps/mstable/src/polyfills.ts",
        "tsConfig": "apps/mstable/tsconfig.app.json",
        "assets": [
          "apps/mstable/src/favicon.ico",
          "apps/mstable/src/ipfs-404.html",
          "apps/mstable/src/manifest.json",
          "apps/mstable/src/robots.txt",
          "apps/mstable/src/assets"
        ],
        "styles": ["node_modules/@rainbow-me/rainbowkit/dist/index.css"],
        "scripts": [],
        "webpackConfig": "webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/mstable/src/environments/environment.ts",
              "with": "apps/mstable/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mstable:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "mstable:build:development"
        },
        "production": {
          "buildTarget": "mstable:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mstable/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "i18n-extract": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "yarn run formatjs extract 'apps/mstable/**/*.{ts,tsx}' --out-file i18n-extractions/apps-mstable.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
        ]
      }
    },
    "i18n-compile": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "jq -rs 'reduce .[] as $item ({}; . * $item)' i18n-extractions/* > i18n-aggregated-extractions/en.json",
          "yarn run formatjs compile i18n-aggregated-extractions/en.json --ast --out-file apps/mstable/src/assets/lang/en.json",
          "yarn run nx format:write --files libs/mstable/shared/i18n/src/lang/*.json"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
