{
  "name": "burn",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/burn/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "dependsOn": ["i18n-compile"],
      "options": {
        "outputPath": "dist/apps/burn"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "burn:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "burn:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "burn:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nrwl/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "burn:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "burn:build:development"
        },
        "production": {
          "buildTarget": "burn:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/burn/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "yarn firebase use burn",
          "yarn firebase deploy -c ./firebase.burn.json --only hosting"
        ],
        "parallel": false
      }
    },
    "deploy:dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "yarn firebase use burn",
          "yarn firebase hosting:channel:deploy dev -c ./firebase.burn.json --expires 7d"
        ],
        "parallel": false
      }
    },
    "i18n-extract": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn run formatjs extract 'apps/burn/src/**/*.{ts,tsx}' --out-file i18n-extractions/apps-burn.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
        ]
      }
    },
    "i18n-compile": {
      "executor": "nx:run-commands",
      "dependsOn": ["i18n-extract", "^i18n-extract"],
      "options": {
        "commands": [
          "jq -rs 'reduce .[] as $item ({}; . * $item)' i18n-extractions/* > apps/burn/i18n/en.json",
          "yarn run formatjs compile apps/burn/i18n/en.json --ast --out-file apps/burn/src/assets/lang/en.json",
          "yarn run nx format:write --files apps/burn/src/assets/lang/en.json"
        ],
        "parallel": false
      }
    }
  },
  "tags": ["burn"]
}
